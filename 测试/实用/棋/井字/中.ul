using * in 测试.实用.棋.井字.棋盘
using * in 测试.实用.棋.井字.棋局

格数 = 3
棋盘 = 棋盘图样(格数)
状况 = 棋盘状况(格数)
loop {
  状况.落子(棋盘.鼠标位置所在格()) if 棋盘.取事件() == 棋盘事件.鼠标按键
  棋盘.画棋盘()
  // TODO: 提取下一部分
  //棋盘.画棋子(状况.所有子)

  for 落子 in 状况.所有子 {
    横格, 纵格 = 落子.横, 落子.纵
    if 落子.棋手 == 棋手.X {
      棋盘.画X(横格, 纵格)
    } else {
      棋盘.画O(横格, 纵格)
    }
  }

  // 比赛结束
  if 状况.进行状态 != 状态.对弈 {
    棋盘.宣布结果(状况.取结语())
  }
  棋盘.更新()
}
