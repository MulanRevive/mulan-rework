using 所有歌 in 测试.实用.儿歌

func 取歌名(歌) {
    return 歌.题目
}

func 所有歌名() {
    return list(map(取歌名, 所有歌))
}

func 按名搜歌(主题) {
    func 匹配题目(歌) {
        return 歌.题目.find(主题) >= 0
    }
    return list(map(取歌名, filter(匹配题目, 所有歌)))
}

func 按名取词(歌名) {
    for 歌 : 所有歌 {
        if 歌.题目 == 歌名 {
            return 歌.内容
        }
    }
}

println(所有歌名())
println(按名搜歌("花"))
println(按名取词("四季童谣"))

