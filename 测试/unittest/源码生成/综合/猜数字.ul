using sys, cmd
using randrange in random


type 猜数字 : cmd.Cmd {
   {
    intro, prompt = tuple('我想了个 100 之内的数，猜猜是几？', '请猜吧: ')
    想的 = randrange(1000) / 10
  }

  func $default(行) {
    try {
      数 = int(行)
    }
    catch 例外 : ValueError {
      println(行 + ' 不是数，请再试')
      return
    }
    $比较(数)
  }

  func $比较(数) {
    if (数 == $想的) {
      println('中了!')
      sys.exit()
    }
    println((数 > $想的) ? '太大了!' : '太小了!')
  }
}
猜数字().cmdloop()